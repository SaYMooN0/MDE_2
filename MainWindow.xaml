<Window x:Class="MDE_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDE_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Code\Styles\ButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Canvas x:Name="MainCanvas">
        <Grid x:Name="CenterGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Develop Button -->
            <Button x:Name="DevelopBTN"
            Grid.Row="0"
            Style="{StaticResource ButtonStyle}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0,0,0,8"
            Click="DevelopBTN_Click">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Images/Icons/Run.png"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Stretch="Uniform" Margin="8 4"/>
                    <TextBlock Grid.Column="1" Text="Develop" VerticalAlignment="Center"/>
                </Grid>
                <Button.HorizontalContentAlignment>Stretch</Button.HorizontalContentAlignment>
                <Button.VerticalContentAlignment>Stretch</Button.VerticalContentAlignment>
            </Button>

            <!-- Settings Button -->
            <Button x:Name="SettinsBTN"
           Grid.Row="1"
            Style="{StaticResource ButtonStyle}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0,0,0,8"
            Click="DevelopBTN_Click">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Images/Icons/Settings.png"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Stretch="Uniform" Margin="8 4"/>
                    <TextBlock Grid.Column="1" Text="Settings" VerticalAlignment="Center"/>
                </Grid>
                <Button.HorizontalContentAlignment>Stretch</Button.HorizontalContentAlignment>
                <Button.VerticalContentAlignment>Stretch</Button.VerticalContentAlignment>
            </Button>

            <!-- About Me Button -->
            <Button x:Name="AboutBTN"
           Grid.Row="2"
            Style="{StaticResource ButtonStyle}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0,0,0,8"
            Click="DevelopBTN_Click">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Images/Icons/Profile.png"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Stretch="Uniform" Margin="8 4"/>
                    <TextBlock Grid.Column="1" Text="About Author" VerticalAlignment="Center"/>
                </Grid>
                <Button.HorizontalContentAlignment>Stretch</Button.HorizontalContentAlignment>
                <Button.VerticalContentAlignment>Stretch</Button.VerticalContentAlignment>
            </Button>
        </Grid>
    </Canvas>

</Window>
