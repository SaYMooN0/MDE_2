<Window x:Class="MDE_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDE_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Code\Styles\ButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Canvas x:Name="MainCanvas">
        <Grid x:Name="CenterGrid"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="DevelopBTN"
                    Grid.Row="0"
                    Style="{StaticResource ButtonStyle}"
                    Content="Кнопка 1"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,10"
                    Click="DevelopBTN_Click"/>

            <Button x:Name="SettinsBTN"
                    Grid.Row="1"
                    Style="{StaticResource ButtonStyle}"
                    Content="Кнопка 2"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,10"
                    Click="SettinsBTN_Click"/>

            <Button x:Name="AboutBTN"
                    Grid.Row="2"
                    Style="{StaticResource ButtonStyle}"
                    Content="Кнопка 3"
                    HorizontalAlignment="Stretch"
                    Click="AboutBTN_Click"/>
        </Grid>
    </Canvas>
</Window>
